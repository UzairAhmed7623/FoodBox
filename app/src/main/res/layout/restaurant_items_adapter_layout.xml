<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:foreground="@drawable/ripple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="@color/white_greyish"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/ivItem"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/food_placeholder"
                    android:focusable="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="start"
                        android:text="Restaurant item name"
                        android:letterSpacing="0.05"
                        android:textStyle="bold"
                        android:textFontWeight="600"
                        android:textAllCaps="true"
                        android:textColor="@color/grey_90"
                        android:textSize="14sp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/sf_pro_rounded_regular" />

                    <TextView
                        android:id="@+id/tvItemPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:gravity="left"
                        android:text="Price"
                        android:layout_gravity="start"
                        android:letterSpacing="0.05"
                        android:textStyle="bold"
                        android:textFontWeight="600"
                        android:textAllCaps="true"
                        android:textColor="@color/grey_90"
                        android:textSize="14sp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/sf_pro_rounded_regular"/>

                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="end|center_vertical"
                            android:layout_gravity="center_vertical">

                            <ImageButton
                                android:id="@+id/ibSelectItem"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:visibility="visible"
                                android:src="@drawable/add_to_cart"
                                android:background="@android:color/transparent"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"/>

                        </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvItemSchedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Available from: 9am to 2pm"
                        android:layout_gravity="start"
                        android:letterSpacing="0.05"
                        android:textStyle="bold"
                        android:textFontWeight="600"
                        android:textAllCaps="true"
                        android:textColor="@color/grey_90"
                        android:textSize="14sp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/sf_pro_rounded_regular"/>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>