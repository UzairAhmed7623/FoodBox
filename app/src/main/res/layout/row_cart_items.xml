<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tvItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item Title"
        android:textColor="@android:color/black"/>

        <RelativeLayout
            android:id="@+id/prices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tvItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/tvMultiplyLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/prices1"
                android:layout_toEndOf="@+id/tvItemPrice"
                android:gravity="center"
                android:text="x"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/prices1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:id="@+id/ibRemoveItemCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_alignParentStart="true"
                android:src="@drawable/remove_item" />

            <TextView
                android:id="@+id/tvItemCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:text="1"
                android:textSize="16sp"
                android:layout_toEndOf="@+id/ibRemoveItemCart"
                android:textColor="@android:color/black" />

            <ImageButton
                android:id="@+id/ibAddItemCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_toEndOf="@+id/tvItemCount"
                android:src="@drawable/add_item" />

        </RelativeLayout>

            <TextView
                android:id="@+id/tvEqualToLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/tvPriceEach"
                android:layout_toEndOf="@+id/prices1"
                android:gravity="center"
                android:text="="
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvPriceEach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="15sp"
                android:gravity="end"
                android:layout_marginEnd="5dp"
                android:textColor="@android:color/black"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/linearLayout"
            android:background="@color/myColor"/>

    </LinearLayout>

</RelativeLayout>