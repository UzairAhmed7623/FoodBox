<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackgroundBorderless">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            app:cardCornerRadius="5dp"
            app:cardElevation="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/myColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvItemHistory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="left|center_vertical"
                            android:text="Item name"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:fontFamily="@font/poppins_medium"
                            android:background="?attr/selectableItemBackgroundBorderless" />

                        <TextView
                            android:id="@+id/tvOrderDateHistory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="left|center_vertical"
                            android:text="Order date: 12-02-2021"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:fontFamily="@font/poppins_medium"
                            android:background="?attr/selectableItemBackgroundBorderless" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end|center_vertical"
                        android:layout_gravity="center_vertical"
                        android:background="?attr/selectableItemBackgroundBorderless" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                             android:orientation="horizontal"
                            android:gravity="end|center_vertical"
                            android:layout_gravity="center_vertical"
                            android:background="?attr/selectableItemBackgroundBorderless" >

                            <TextView
                                android:id="@+id/tvItemPriceHistory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:layout_gravity="center_vertical"
                                android:text="200"
                                android:textAllCaps="true"
                                android:textColor="@android:color/white"
                                android:textSize="15sp"
                                android:fontFamily="@font/poppins_medium"
                                android:paddingEnd="10dp"
                                android:background="?attr/selectableItemBackgroundBorderless" />

                            <TextView
                                android:id="@+id/tvMultiplyLabelHistory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:layout_gravity="center_vertical"
                                android:text="x"
                                android:textAllCaps="true"
                                android:textColor="@android:color/white"
                                android:textSize="15sp"
                                android:fontFamily="@font/poppins_medium"
                                android:paddingEnd="10dp"
                                android:background="?attr/selectableItemBackgroundBorderless" />

                            <TextView
                                android:id="@+id/tvItemCountHistory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:layout_gravity="center_vertical"
                                android:text="3"
                                android:textAllCaps="true"
                                android:textColor="@android:color/white"
                                android:textSize="15sp"
                                android:fontFamily="@font/poppins_medium"
                                android:paddingEnd="10dp"
                                android:background="?attr/selectableItemBackgroundBorderless" />

                            <TextView
                                android:id="@+id/tvEqualToLabelHistory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:layout_gravity="center_vertical"
                                android:text="="
                                android:textAllCaps="true"
                                android:textColor="@android:color/white"
                                android:textSize="15sp"
                                android:fontFamily="@font/poppins_medium"
                                android:paddingEnd="10dp"
                                android:background="?attr/selectableItemBackgroundBorderless" />

                            <TextView
                                android:id="@+id/tvTotalHistory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:layout_gravity="center_vertical"
                                android:text="600"
                                android:textAllCaps="true"
                                android:textColor="@android:color/white"
                                android:textSize="15sp"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_marginEnd="10dp"
                                android:background="?attr/selectableItemBackgroundBorderless" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvProgressHistory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In progress"
                            android:textAllCaps="true"
                            android:textColor="@color/teal_200"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="14sp"
                            android:visibility="visible"
                            android:layout_gravity="end"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>