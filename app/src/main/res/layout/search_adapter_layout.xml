<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_gravity="start"
android:background="?attr/selectableItemBackground"
android:foreground="@drawable/ripple"
android:orientation="horizontal">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="#00000000"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/tvItemSearch"
                android:layout_width="120dp"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="30dp"
                android:ellipsize="end"
                android:fontFamily="@font/sf_pro_rounded_regular"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="Product name"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvItemPriceSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/sf_pro_rounded_regular"
                android:includeFontPadding="false"
                android:text="PKR0.00"
                android:textAlignment="center"
                android:textColor="#FF2525"
                android:textFontWeight="600"
                android:textSize="18sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivItemSearch"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-275dp"
        android:background="#00000000"
        android:elevation="25dp"
        android:src="@drawable/food_placeholder"
        app:civ_border_color="@android:color/transparent"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="#00000000" />

</LinearLayout>

</LinearLayout>
